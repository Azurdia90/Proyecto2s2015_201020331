<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Actividad_principal"
    android:id="@+id/layout_principal">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eT_usuario"
        android:layout_marginStart="111dp"
        android:width="500dp"
        android:height="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/eT_password"
        android:layout_below="@+id/eT_usuario"
        android:layout_alignStart="@+id/eT_usuario"
        android:layout_marginTop="52dp"
        android:height="50dp"
        android:width="500dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_dominios"
        android:layout_below="@+id/eT_usuario"
        android:layout_toEndOf="@+id/eT_usuario"
        android:layout_marginStart="87dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_login"
        android:id="@+id/b_login"
        android:layout_below="@+id/eT_password"
        android:layout_alignStart="@+id/eT_password"
        android:layout_marginStart="159dp"
        android:layout_marginTop="41dp"
        android:onClick="OnIniciar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_nuevo_usuario"
        android:id="@+id/b_nuevousuario"
        android:layout_below="@+id/b_login"
        android:layout_alignStart="@+id/b_login"
        android:layout_marginTop="61dp"
        android:onClick="OnCrear" />

</RelativeLayout>
